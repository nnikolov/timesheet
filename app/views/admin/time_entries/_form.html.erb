<%= form_for([:admin, @time_entry]) do |f| %>
  <% if @time_entry.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@time_entry.errors.count, "error") %> prohibited this time_entry from being saved:</h2>

      <ul>
      <% @time_entry.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :employee_id %><br>
    <%= f.select :employee_id, Employee.all.order("first_name, last_name").collect {|p| [ "#{p.first_name} #{p.last_name}", p.id ] } %>
  </div>
  <div class="field">
    <%= f.label :start_time %><br>
    <%= f.time_select :start_time, {minute_step: 15} %>
  </div>
  <div class="field">
    <%= f.label :end_time %><br>
    <%= f.time_select :end_time, {minute_step: 15} %>
  </div>
  <div class="field">
    <%= f.label :hours_worked %><br>
    <%= f.text_field :hours_worked, :disabled => true %>
  </div>
  <div class="field">
    <%= f.label :entry_date %><br>
    <%= f.date_select :entry_date %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
